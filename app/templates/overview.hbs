<div height="500px" class="layout-row layout-xs-column">

  <div class="flex container">
    <div class="card">
      <div class="line">
        <h3>Spending categories</h3>
        <p>this month</p>
      </div>
      {{ember-chart type="doughnut" data=priorityOptions}}
      {{#paper-button raised=true fab=true accent=true onClick=(action "targetButton")}}+{{/paper-button}}
    </div>

  </div>
  <div class="flex container">

    <div class="card small">
      <div>
        <h3>Savings</h3>
        <p>Save smoth</p>
      </div>
      <div align="center">
        <p>Hawaaii</p>
        {{ember-progress-bar progress=0.1 options=(hash strokeWidth=4 duration=1000  easing="easeOut" trailColor="#BBEEE9" color = "#03DAC5" trailWidth= 4)}}
      </div>
      <div align="center">
        <p>Emergency</p>
        {{ember-progress-bar progress=0.3 options=(hash strokeWidth=4 duration=1000  easing="easeOut" trailColor="#BBEEE9" color = "#03DAC5" trailWidth= 4)}}
      </div>
    </div>

    <div class="card small">
      <h3>Top spendings</h3>
      <p>Opreste-te animalule</p>
      <p>{{scopeTest.amount}}</p>
    </div>

  </div>
</div>

