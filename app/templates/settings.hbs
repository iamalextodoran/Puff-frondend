<div class="layout-row layout-xs-column">
  <div class="flex container">
    <h1>Settings</h1>
    <p>with great power comes great responsibility</p>
  </div>
</div>

<div class="layout-row layout-xs-column">
  <div class="flex container">
    <div class="card">
      <h3>Theme</h3>

      {{#paper-item}}
        {{paper-icon "color_lens"}}
        <p>Bar color</p>
        <div class="md-secondary-container">
          {{color-picker value=trail default="#BBEEE9" format="hexa" components=components onChange=(action "trailOnChange")}}
          {{color-picker value=color default="#03DAC5" format="hexa" components=components onChange=(action "colorOnChange")}}
        </div>
      {{/paper-item}}

      {{#paper-item}}
        {{paper-icon "colorize"}}
        <p>Accent color</p>
        <div class="md-secondary-container">
          {{color-picker value=accent default="purple" format="hexa" components=components onChange=(action "accentOnChange")}}
        </div>
      {{/paper-item}}

    </div>
  </div>
</div>

<div class="layout-row layout-xs-column">
  <div class="flex container">
    <div class="card">
      <h3>User settings</h3>

      {{#paper-item}}
        {{paper-icon "text_fields"}}
        <p>Full name</p>
        <div class="md-secondary-container">
          {{paper-input type="text" value=selectedUser.fullName onChange=(action (mut selectedUser.fullName))}}
        </div>
      {{/paper-item}}

      {{#paper-item}}
        {{paper-icon "face"}}
        <p>Picture</p>
        <div class="md-secondary-container">
          {{paper-input type="text" value=selectedUser.picture onChange=(action (mut selectedUser.picture))}}
        </div>
      {{/paper-item}}

      {{#paper-item}}
        {{paper-icon "call-split"}}
        <p>Red flag</p>
        <div class="flex layout layout-align-center-center slider-container">
          {{paper-slider class="flex" min=0 max=5000 value=selectedUser.danger onChange=(action (mut selectedUser.danger))}}
          {{paper-input type="number" value=selectedUser.danger onChange=(action (mut selectedUser.danger))}}   
        </div>
      {{/paper-item}}

      <div align="right">
        {{#paper-button raised=true primary=true onClick=(action "submit")}}Remember{{/paper-button}}
      </div>

    </div>
  </div>
</div>